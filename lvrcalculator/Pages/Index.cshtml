@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<h1 class="display-4" style="text-align:left">LVR Calculator</h1>

<div class="row">
    <div class="column">
        
        <form>
        <label for="value">What is the value of the property?</label><br>
        <div class="input-icon">
            <input type="number" step='0.01' value='0.00' placeholder='0.00' id="value" pattern="[0-9]+"> <br>
            <i>$</i>
        </div>
        <label for="loan">How much are you planning to borrow?</label><br>
        <div class="input-icon">
            <input type="number" step='0.01' value='0.00' placeholder='0.00' id="loan" pattern="[0-9]+"> <br>
            <i>$</i>
        </div>
        </form>
        <br>
        <button type="submit" id="button">Calculate</button>
    </div>
    <div class="column">
        <label id="result1"></label><br>
        <label id="result2"></label><br>
        <label id="result3"></label><br>
    </div>
</div> 